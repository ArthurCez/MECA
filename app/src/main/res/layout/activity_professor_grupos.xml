<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufmg_leic.meca.ProfessorGrupos">

    <TextView
        android:id="@+id/TituloGrupos"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:text=""
        android:textSize="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/subtituloGrupos"
        android:layout_width="184dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Grupos"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloGrupos"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/ListaGrupos"
        android:layout_width="286dp"
        android:layout_height="364dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtituloGrupos"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/buttonRename"
        android:layout_width="107dp"
        android:layout_height="53dp"
        android:text="Renomear Grupo"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ListaGrupos" />

    <Button
        android:id="@+id/buttonComp"
        android:layout_width="109dp"
        android:layout_height="53dp"
        android:text="Membros do Grupo"
        android:textSize="11dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonRename"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/buttonRename"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonRename"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="491dp" />

    <Button
        android:id="@+id/buttonAuthorize"
        android:layout_width="105dp"
        android:layout_height="53dp"
        android:text="Autorizacoes"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@+id/buttonComp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonComp"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/buttonComp"
        android:layout_marginLeft="1dp"
        tools:layout_editor_absoluteY="491dp" />
</android.support.constraint.ConstraintLayout>
