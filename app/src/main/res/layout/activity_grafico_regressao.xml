<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufmg_leic.meca.GraficoRegressao">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphreg"
        android:layout_width="290dp"
        android:layout_height="195dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewGrau"
        android:layout_width="138dp"
        android:layout_height="29dp"
        android:text="Grau do Polinomio"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerreg"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinnerreg"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/graphreg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewGrau"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.229" />

    <TextView
        android:id="@+id/textViewcoef"
        android:layout_width="184dp"
        android:layout_height="233dp"
        android:text=" "
        android:gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerreg" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewcoef"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:text="     "
        app:layout_constraintLeft_toRightOf="@+id/graphreg"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp" />

</android.support.constraint.ConstraintLayout>
