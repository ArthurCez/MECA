<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufmg_leic.meca.ProfessorTurmas">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ListaTurmas"
        android:layout_marginLeft="267dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.859"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.818" />

    <TextView
        android:id="@+id/texttitulo"
        android:layout_width="184dp"
        android:layout_height="38dp"
        android:text="Turmas"
        android:textSize="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.114" />

    <ListView
        android:id="@+id/ListaTurmas"
        android:longClickable="true"
        android:layout_width="301dp"
        android:layout_height="386dp"
        android:layout_marginBottom="101dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texttitulo"
        app:layout_constraintVertical_bias="0.17"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="144dp"
        android:layout_height="19dp"
        android:text="Adicinar Nova Turma"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.47"
        app:layout_constraintRight_toLeftOf="@+id/floatingActionButton"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>
