<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufmg_leic.meca.Menu">

    <Button
        android:id="@+id/Display"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:text="Display"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="97dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Permanente"
        android:layout_width="172dp"
        android:layout_height="51dp"
        android:text="Permanente"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Display"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Grafico"
        android:layout_width="174dp"
        android:layout_height="51dp"
        android:text="Grafico"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/Permanente"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Transitorio"
        android:layout_width="173dp"
        android:layout_height="51dp"
        android:text="Transitorio"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/Grafico"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/Configuracoes"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:text="Configuracoes"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Mapeamento"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Mapeamento"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginBottom="77dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Mapeamento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Transitorio"
        app:layout_constraintVertical_bias="0.017" />


</android.support.constraint.ConstraintLayout>
