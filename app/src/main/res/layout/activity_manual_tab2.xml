<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip">

    <TextView
        android:id="@+id/TextViewCoeficientes"
        android:layout_width="299dp"
        android:layout_height="43dp"
        android:layout_x="43dp"
        android:layout_y="23dp"
        android:text="Segunda"
        android:textSize="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.513" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="285dp"
        android:layout_height="32dp"
        android:layout_x="43dp"
        android:layout_y="23dp"
        android:text="GrÃ¡ficos"
        android:textSize="25dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintHorizontal_bias="0.096" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/Histograma"
        android:layout_width="333dp"
        android:layout_height="128dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/CurvaCalibracao"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.051" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/CurvaCalibracao"
        android:layout_width="333dp"
        android:layout_height="224dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCoeficientes"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.242" />

    <Button
        android:id="@+id/button_Up"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:text="Enviar Dados"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Histograma"
        app:layout_constraintVertical_bias="0.666"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>