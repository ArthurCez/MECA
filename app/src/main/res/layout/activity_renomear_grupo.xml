<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufmg_leic.meca.RenomearGrupo">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="189dp"
        android:layout_height="42dp"
        android:text="Insira um novo nome para o grupo:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutrenomear"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutrenomear"
        app:layout_constraintHorizontal_bias="0.08" />

    <Button
        android:id="@+id/buttonrenomear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renomear"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutrenomear"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutrenomear" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutrenomear"
        android:layout_width="271dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:layout_width="258dp"
            android:layout_height="match_parent"
            android:hint="Novo Nome" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonrenomear"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutrenomear" />

</android.support.constraint.ConstraintLayout>
