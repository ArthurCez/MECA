<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufmg_leic.meca.SubMenuPermanente">

    <Button
        android:id="@+id/BotaoManual"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:text="Manual"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.037" />

    <Button
        android:id="@+id/BotaoSemi"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:text="Semi Automático"
        android:textSize="13dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/BotaoManual"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.038" />

    <Button
        android:id="@+id/BotaoAuto"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:text="Automático"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/BotaoSemi"
        app:layout_constraintHorizontal_bias="0.037" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/BotaoAuto"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25" />
</android.support.constraint.ConstraintLayout>
